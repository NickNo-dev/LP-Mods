    allowTransModels = Player.getActorVar(pe_AllowTransModels)
    
    "Welcome to PornEmpireâ„¢ Settings!"

    stayInMenu = true
    While stayInMenu
        detailModeEnabledTxt = "OFF"
        If detailModeEnabled > 0
            detailModeEnabledTxt = "ON"
        EndIf
        
        modelsBiEnabledTxt = "OFF"
        If modelsBiEnabled > 0
            modelsBiEnabledTxt = "ON"
        EndIf
        
        allowTransModelsTxt = "OFF"
