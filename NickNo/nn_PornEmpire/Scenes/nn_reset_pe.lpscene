        Player.setActorVar(pe_PhotoCameraEquipmentType, 0)
        Player.setActorVar(pe_VideoCameraEquipmentType, 0)
        Player.setActorVar(pe_LightEquipmentType, 0)
        Player.setActorVar(pe_SceneEquipmentType, 0)
        Player.setActorVar(pe_ToyEquipmentType, 0)
        
        // Online prices
        Player.setActorVar(pe_PhotoSetPrice, 2.5)
        Player.setActorVar(pe_WebCamShowPrice, 5)
        
        // Reset models
        Actor = getPerson(true)
        While Actor.isValid()
        
            // photos
            Actor.setActorVar(pe_PhotoSetCount, 0)                  // number of photo sets of this actor
            Actor.setActorVar(pe_PhotoSetValue, 0)                  // value of the photo sets of this actor
            Actor.setActorVar(pe_PhotoSetCountPending, 0)           // pending photo set uploads
            Actor.setActorVar(pe_PhotoSetValuePending, 0)           // value of the pending uploads
            Actor.setActorVar(pe_HasDoneShootings, 0)               // 1 if the actor has done shootings
            Actor.setActorVar(pe_DeclinedDoingShootings, 0)         // state of the negotiations if not a model yet
            Actor.setActorVar(pe_IsAgencyModel, 0)                  // 1 if the model was generated "by the agency"
            Actor.setActorVar(tag_PEModel, 0)
            
            // web camming
            Actor.setActorVar(pe_DeclinedDoingWebCam, 0)
            Actor.setActorVar(pe_EmployeeSalary, 0)
            Actor.setActorVar(pe_WebCammingFrequency, 0)
            Actor.setActorVar(tag_PEWebCam, 0)
            
