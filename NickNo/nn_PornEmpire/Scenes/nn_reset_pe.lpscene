            Actor.setActorVar(pe_LastJobTraining, 0)
            Actor.setActorVar(pe_LastSalaryNegotiation, 0)
            Actor.setActorVar(pe_EmployeeSalary, 0)
            
            // Photographer specific
            Actor.setActorVar(tag_PEPhotographer, 0)
            
            // Admin specific
            Actor.setActorVar(tag_PEAdmin, 0)
            
            Actor = getPerson(true)
        EndWhile
        
        
        "All done. All models and equipment / advertising stats have been reset."
        
